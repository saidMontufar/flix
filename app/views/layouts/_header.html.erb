<header>
    <nav>
        <%= link_to image_tag('logo.png'), root_path %>
        <ul class="left">
            <li>
            <%= link_to 'All movies', movies_path %>
            </li>
        </ul>

        <ul class = 'right'>

            <% if current_user%>
                <li>
                    <%= link_to current_user.name, current_user %>
                </li>
                <li>
                    <%= link_to "Sign out", session_path, class: "button",
                                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%>
                </li>
            <% else %>
                <li>
                    <%= link_to "Log in", new_session_path, class: "button"%>
                </li>
                <li>
                    <%= link_to "Signup", signup_path, class: "button"%>
                </li>
            <% end %>
        </ul>
    </nav>
</header>
