<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>

  <div class="actions">
    <%= link_to "Edit account", edit_user_path(@user),
                                class: "button edit" %>
    <%= link_to "Delete account", @user, class: "button delete",
                                  data: {turbo_method: :delete, turbo_confirm: "Permanently delete your account!?"} %>
  </div>
</section>
